{
    "definitions": {
        "inputs": {
            "description": "Defines the inputs of execution of an action",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "label",
                    "name",
                    "type"
                ],
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "text",
                            "bool",
                            "int",
                            "password",
                            "multiselect",
                            "select"
                        ]
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "pattern": {
                        "type": "string"
                    },
                    "help": {
                        "type": "string"
                    },
                    "default": {
                        "type": "string"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "shell-command": {
            "type": "object",
            "properties": {
                "windows": {
                    "type": "string"
                },
                "linux": {
                    "type": "string"
                },
                "macos": {
                    "type": "string"
                }
            }
        },
        "requires": {
            "description": "Defines the connection intefaces which an action depends",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "dir-path": {
            "type": "string"
        },
        "container": {
            "description": "Definitions of a container action",
            "type": "object",
            "properties": {
                "spec": {
                    "description": "Dockerfile relative path from action root dir",
                    "type": "string"
                },
                "volumes": {
                    "description": "List of volumes to be mapped between host and container",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/dir-path"
                    }
                }
            },
            "required": [
                "spec"
            ]
        },
        "python": {
            "description": "Definitions of a python action",
            "type": "object",
            "properties": {
                "workdir": {
                    "description": "Where the run should be executed",
                    "$ref": "#/definitions/dir-path"
                },
                "script": {
                    "description": "Path to a python script",
                    "type": "string"
                }
            },
            "required": [
                "script"
            ]
        },
        "shell": {
            "shell": "Definitions of a shell action",
            "type": "object",
            "properties": {
                "workdir": {
                    "description": "Where the run should be executed",
                    "$ref": "#/definitions/dir-path"
                },
                "requirement-check": {
                    "description": "Commands which are executed before the runtime to check if the action is ready to be executed",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "command": {
                                "$ref": "#/definitions/shell-command"
                            },
                            "info": {
                                "description": "The infomation message which will be displayed in cases of failure",
                                "type": "string"
                            }
                        }
                    }
                },
                "script": {
                    "description": "Commands of the action",
                    "$ref": "#/definitions/shell-command"
                }
            },
            "required": [
                "script"
            ]
        },
        "webservice": {
            "description": "Definitions of a webservice action",
            "type": "object",
            "properties": {
                "url": {
                    "description": "URL of request",
                    "type": "string"
                },
                "method": {
                    "description": "HTTP method of request",
                    "type": "string",
                    "enum": [
                        "GET",
                        "POST",
                        "PUT",
                        "PATCH",
                        "DELETE"
                    ],
                    "default": "GET"
                },
                "headers": {
                    "description": "Headers of request",
                    "type": "object",
                    "properties": {}
                },
                "body": {
                    "description": "Body of request",
                    "anyOf": [
                        {
                            "type": "object",
                            "properties": {}
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {}
                            }
                        },
                        {
                            "type": "string",
                            "items": {
                                "type": "object",
                                "properties": {}
                            }
                        }
                    ]
                },
                "responses": {
                    "description": "Expected responses of request",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "status": {
                                "description": "Http status code expected",
                                "type": "integer"
                            },
                            "type": {
                                "description": "Type of response",
                                "type": "string",
                                "enum": [
                                    "success",
                                    "error"
                                ]
                            },
                            "format": {
                                "description": "Response format expected",
                                "type": "string",
                                "enum": [
                                    "json",
                                    "xml"
                                ],
                                "default": "json"
                            },
                            "message": {
                                "message": "Message to be showed if the status code of execution matches",
                                "type": "string"
                            },
                            "outputs": {
                                "message": "Output attributes map",
                                "type": "object"
                            }
                        },
                        "required": [
                            "status",
                            "type",
                            "message"
                        ]
                    }
                }
            },
            "required": [
                "url",
                "responses"
            ]
        }
    }
}