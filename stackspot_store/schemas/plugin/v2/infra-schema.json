{
    "type": "object",
    "properties": {
      "schema-version": {
        "type": "string",
        "enum": ["v2"]
      },
      "kind": {
        "type": "string",
        "enum": ["plugin"]
      },
      "metadata": {
        "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/metadata/v2/schema.json"
      },
      "spec": {   
        "type": "object", 
        "properties": {
          "runtime": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/environment" },
          "type": { "type": "string", "enum": ["infra"] },
          "about": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/markdown" },
          "implementation": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/markdown" },
          "requirements": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/markdown" },
          "release-notes": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/markdown" },
          "inputs": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/inputs" },
          "inputs-envs": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/inputs" },
          "compatibility": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/compatibility" },
          "technologies": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/technologies" },
          "repository": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/repository" },
          "generates": {
            "type": "object",
            "required": ["connections"],
            "properties": {
              "connections": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/connections" },
              "link": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/links" }
            }
          },
          "requires": {
            "type": "object",
            "properties": {
              "connections": { "$ref": "https://raw.githubusercontent.com/stack-spot/schemastore-stackspot/main/stackspot_store/schemas/plugin/v2/_definitions.json#/definitions/connections" }
            }
          }
        },
        "required": ["type", "generates"]
      }
    },
    "required": [
      "schema-version",
      "kind",
      "metadata",
      "spec"
    ]
  }