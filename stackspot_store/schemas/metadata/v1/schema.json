        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "display-name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "version": {
        "type": "string",
        "pattern": "^\\d{1,2}.\\d{1,2}.\\d{1,3}$|^latest$"
      },
      "picture": {
        "type": "string"
      }
    },
    "required": [
      "name",
      "display-name",
      "description",
      "version"
    ]
}